<fire title="Configured Fire">
  <size min="3" max="40">30</size>
  <num-states num="3"/>
  <state-names states="empty, green, burning"/>
  <edges>normal</edges>
  <shape>square</shape>
  <neighbors>0, 2, 4, 6</neighbors>
  <configured>
    <empty-spots>
      <position>
        <row>2</row>
        <col>1</col>
      </position>
      <position>
        <row>1</row>
        <col>0</col>
      </position>
    </empty-spots>
    <green-spots>
      <position>
        <row>-1</row>
        <col>-1</col>
      </position>
    </green-spots>
    <burning-spots>
      <position>
        <row>0</row>
        <col>0</col>
      </position>
    </burning-spots>
  </configured>
  <parameters>
    <probCatch min="0.0" max="1.0">0.4</probCatch>
    <probLightning min="0.0" max="1.0">0.5</probLightning>
    <burnTime min="3" max="6">3</burnTime>
    <probGrow min="0.0" max="1.0">0.3</probGrow>
  </parameters>
</fire>