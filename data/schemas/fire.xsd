<!-- Schema for a fire automaton.
     Can choose random or configured locations for all three states.
     Can also choose the probability that a tree will catch fire given its neighbors are ablaze.
-->

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xsd:include schemaLocation="general-CA.xsd"/>
    <xsd:redefine schemaLocation="general-CA.xsd">
        <xsd:complexType name="state-makeup-list">
            <xsd:complexContent>
                <xsd:extension base="state-makeup-list">
                    <xsd:sequence>
                        <xsd:element name="empty" type="xsd:decimal" default="0.1"/>
                        <xsd:element name="burning" type="xsd:decimal" default="0.1"/>
                    </xsd:sequence>
                </xsd:extension>
            </xsd:complexContent>
        </xsd:complexType>
        <xsd:complexType name="location-list">
            <xsd:complexContent>
                <xsd:extension base="location-list">
                    <xsd:sequence>
                        <xsd:element name="empty-spots" type="positions"/>
                        <xsd:element name="burning-spots" type="positions"/>
                    </xsd:sequence>
                </xsd:extension>
            </xsd:complexContent>
        </xsd:complexType>
        <xsd:complexType name="parameter-list">
            <xsd:complexContent>
                <xsd:extension base="parameter-list">
                    <xsd:sequence>
                        <xsd:element name="probCatch" type="xsd:int"/> <!-- NOTICE int now instead of decimal -->
                    </xsd:sequence>
                </xsd:extension>
            </xsd:complexContent>
        </xsd:complexType>
    </xsd:redefine>
    <xsd:element name="fire" type="automaton"/>
</xsd:schema>
